<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zxh.mapper.AdminMapper">
    <select id="queryAll" resultType="Admin">
        select admin.*,user.name,user.username from admin,user
        where admin.userId = user.userId
    </select>

    <select id="queryByUser" resultType="Admin">
        select* from admin
        where admin.userId = #{userId}
    </select>

    <insert id="add" parameterType="Admin">
        insert into admin (userId)
        values (#{userId})
    </insert>

    <update id="update" parameterType="Admin">
        update admin set userId = #{userId}
        where adminId = #{adminId}
    </update>

    <delete id="delete" parameterType="int">
        delete from admin where adminId = #{adminId}
    </delete>
</mapper>